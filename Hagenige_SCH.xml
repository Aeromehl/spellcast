	<rules>
		
<!-- Rule: Gear Based on Spell Light Arts -->
			<if BuffActive="Light Arts|Addendum: White|">
					
				<if spell="Bliz*|Fre*|Aer*|Tor*|Sto*|Qua*|Thu*|Bur*|Wat*|Flo*|Fir*|Fla*|*helix">
					<action type="equip" when="precast" set="Fast"/>
					<action type="equip" when="midcast" set="Lnuke" />
						<if BuffActive="Sublimation: Activated">
							<action type="equip" when="aftercast" set="LsubBuilding"/>
						</if>
						<else>
							<action type="equip" when="aftercast" set="Lidle"/>
						</else>						
				</if>
				<if spell="Gravity|Bind|Blind|Poison|Sleep*">
					<action type="equip" when="precast" set="Fast"/>
					<action type="equip" when="midcast" set="LenfeebleINT" />
						<if BuffActive="Sublimation: Activated">
