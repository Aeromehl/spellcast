<!-- Rule: Staff/Obi/Grip/Boots based on Spell Name or Skill -->
			<if Advanced='("%SpellElement" = "%WeatherElement" OR "%SpellElement" = "%DayElement") AND "$%SpellElementObi" = "1"'>
				<if     Element="Dark"><action type="equip" when="midcast"><sub lock="yes">Dark Grip</sub></action></if>
				<elseif Element="Light"><action type="equip" when="midcast"><sub lock="yes">Light Grip</sub></action></elseif>
				<elseif Element="Thunder"><action type="equip" when="midcast"><sub lock="yes">Thunder Grip</sub></action></elseif>
				<elseif Element="Ice"><action type="equip" when="midcast"><sub lock="yes">Ice Grip</sub></action></elseif>
				<elseif Element="Fire"><action type="equip" when="midcast"><sub lock="yes">Fire Grip</sub></action></elseif>
				<elseif Element="Wind"><action type="equip" when="midcast"><sub lock="yes">Wind Grip</sub></action></elseif>
				<elseif Element="Water"><action type="equip" when="midcast"><sub lock="yes">Water Grip</sub></action></elseif>
				<elseif Element="Earth"><action type="equip" when="midcast"><sub lock="yes">Earth Grip</sub></action></elseif>
			</if>
			
			
<!-- Rule: Equip Desert Boots if Sandstorm is Active -->
		  <if mode="or" BuffActive="Sandstorm" Spell="Sandstorm">
			<action type="equip" when="AfterCast">
				<feet>Desert Boots</feet>
			</action>
		  </if>
			
		<if Advanced='"$%SpellElementGrip" == "1"'>
			<action type="equip" when="midcast">
				<sub lock="true">%SpellElement Grip</sub>
			</action>
		</if>	
			
<!-- auto cancel sneak/utsu/stoneskin/blink when recasting them. Requires Cancel Plugin -->
			<if Spell="Sneak" BuffActive="Sneak" SpellTargetType="Self">
				<action type="command" when="midcast">cancel 71</action>
				<action type="midcastdelay" delay="1.8" />
			</if>
			<if spell="Utsusemi: Ichi" BuffActive="Copy Image">
				<action type="midcastdelay" delay="3.0" />
				<action type="Command" when="midcast">cancel 66</action>
			</if>
			<elseif Spell="Stoneskin" BuffActive="Stoneskin">
				<action type="command" when="midcast">cancel 37</action>
				<action type="midcastdelay" delay="4.8" />
			</elseif>
			<elseif Spell="Blink" BuffActive="Blink">
				<action type="command" when="midcast">cancel 36</action>
				<action type="midcastdelay" delay="4.5" />
			</elseif>
	
			
