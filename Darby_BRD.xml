<rules>
	<!-- Status Rules -->	
				<action type="equip" when="Idle|Engaged" set="BRDIdle"/>
				<action type="equip" when="Resting" set="BRDrest"/>
	
	<!-- Aftercast Rules -->
			<if status="Engaged">
				<action type="equip" when="Aftercast" set="BRDIdle"/>
			</if>
			<else>
				<action type="equip" when="Aftercast" set="BRDIdle"/>
			</else>	
	
	<!-- WS Rules -->
			<if commandprefix="/ws|/weaponskill">
				<action type="equip" when="Precast" Set="BRDIdle" /> 
			</if>
			
	<!-- Spell Rules -->	
			<if Skill="Healing Magic">
				<action type="equip" when="Precast" set="BRDprecures"/>
				<action type="equip" when="Midcast" set="BRDcures"/>
			</if>
			<if spell="*March">
				<action type="equip" when="Precast" set="BRDprecast"/>
				<action type="equip" when="Midcast" set="BRDmarch"/>
			</if>
			<if spell="*Minuet">
