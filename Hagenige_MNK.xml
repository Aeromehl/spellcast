				<action type="equip" when="Aftercast" set="MNKTP"/>
			</if>
			<else>
				<action type="equip" when="Aftercast" set="MNKIdle"/>
			</else>	
	
	<!-- WS Rules -->
			<if commandprefix="/ws|/weaponskill">
				<if spell="Shijin Spiral">
					<action type="equip" when="Precast" Set="MNKShijin" />
				</if>	
				<if spell="Final Heaven">
					<action type="equip" when="Precast" Set="MNKFH" />
				</if>
				<else>
					<action type="equip" when="Precast" Set="MNKWS" /> 
				</else>	
			</if>
	<!-- Spell Rules -->	
			<if spell="Chi*|Chi *">
				<action type="equip" when="Precast" set="MNKchi"/>
			</if>
	
			<if spell="Chakra">
