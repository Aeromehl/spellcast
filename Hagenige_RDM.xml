<rules>
	<!-- Status Rules -->	
				<action type="equip" when="Idle|Engaged" set="RDMIdle"/>
				<action type="equip" when="Resting" set="RDMrest"/>
	
	<!-- Aftercast Rules -->
			<if status="Engaged">
				<action type="equip" when="Aftercast" set="RDMIdle"/>
			</if>
			<else>
				<action type="equip" when="Aftercast" set="RDMIdle"/>
			</else>	
	
	<!-- WS Rules -->
			
			
	<!-- Spell Rules -->	
			<if Skill="Healing Magic">
				<action type="equip" when="Precast" set="RDMcures"/>
			</if>
			<else Skill="Enhancing Magic">
				<action type="equip" when="Precast" set="RDMenhancing"/>
			</else>
			<else Skill="Enfeebling Magic">
				<action type="equip" when="Precast" set="RDMenfeebling"/>
			</else>	
			<else spell="Enfire*|Fire*|Firaga*|Flare*|Burn|Blaze*|Firaja">
				<action type="equip" when="Precast" set="RDMfire"/>
			</else>
			<else spell="Enwater*|Water*|Waterga*|Flood*|Drown|Poison*|Waterja">
				<action type="equip" when="Precast" set="RDMwater"/>
			</else>	
			<else spell="Enstone*|Stone*|Stonega*|Quake*|Rasp|Break*|Stoneja">
				<action type="equip" when="Precast" set="RDMstone"/>
			</else>
			<else spell="Enaero*|Aero*|Aeroga*|Tornado*|Choke|Aeroja|Gravity">
				<action type="equip" when="Precast" set="RDMaero"/>
			</else>	
			<else spell="Enblizzard*|Blizzard*|Blizzaga*|Freeze*|Frost|Blizzaja|Ice Spikes|Bind">
				<action type="equip" when="Precast" set="RDMbliz"/>
			</else>	
			<else spell="Enthunder*|Thunder*|Thundaga*|Burst*|Shock|Thundaja|Shock Spikes">
				<action type="equip" when="Precast" set="RDMthun"/>
			</else>
			<else spell="Sleep*|Drain*|Bio*|Aspir">
				<action type="equip" when="Precast" set="RDMdark"/>
			</else>	
				
				 
				 
				 
				 
