	<!-- RULES SECTION -->

	<rules>
		<if spell="*Waltz|* Waltz">
				<action type="equip" when="Precast" set="Waltz"/>
			</if>
		
		<if Spell="Primal Rend|Ruinator|Onslaught|Bora Axe|Mistral Axe|Raging Axe|Smash Axe|Gale Axe|Avalanche Axe|Spinning Axe|Rampage|Calamity|Slice|Dark Harvest|Nightmare Scythe|Spinning Scythe|Vorpal Scythe">
					<action type="equip" when="precast" set="WS"/>
					
		</if>		

		
			
		
		<if spell="Call Beast">
					<action type="equip" when="precast" set="Jug"/>
					
		</if>
		
		
		
		<if spell="Reward">
					<action type="equip" when="precast" set="Reward"/>
					
		</if>
		
		
		
		<if spell="Fight">
					<action type="equip" when="precast" set="Main"/>
					<action type="equip" when="midcast" set="Main"/>
					
		</if>
		
					
		<!-- Status Rules -->
			<action type="equip" when="Engaged" set="Main" />
			<action type="equip" when="Idle|Resting" set="Idle" />
				
	
		<!-- Aftercast Rules -->
			<if status="Engaged">
				<action type="equip" when="Aftercast" set="Main"/>
			</if>
			<else>
				<action type="equip" when="Aftercast" set="Idle"/>
			</else>	
			
		
		
		
		<if subjob="SCH|RDM">
			<if spell="Dia">
				<if Advanced='"%dayelement"="Earth"'>
							<action Type="ChangeSpell" Spell="Stone"/>
				</if>
				<if Advanced='"%dayelement"="Fire"'>
							<action Type="ChangeSpell" Spell="Fire"/>
				</if>
				<if Advanced='"%dayelement"="Wind"'>
							<action Type="ChangeSpell" Spell="Aero"/>
				</if>
				<if Advanced='"%dayelement"="Water"'>
							<action Type="ChangeSpell" Spell="Water"/>
				</if>
				<if Advanced='"%dayelement"="Light"'>
							<action Type="ChangeSpell" Spell="Dia"/>
				</if>
				<if Advanced='"%dayelement"="Dark*"'>
							<action Type="ChangeSpell" Spell="Bio"/>
				</if>
				<if Advanced='"%dayelement"="Ice"'>
							<action Type="ChangeSpell" Spell="Blizzard"/>
				</if>
				<if Advanced='"%dayelement"="Lightning"'>
							<action Type="ChangeSpell" Spell="Thunder"/>
				</if>	
			</if>
			
			
		</if>
		
		<if spell="Jettatura|Fantod"> 
